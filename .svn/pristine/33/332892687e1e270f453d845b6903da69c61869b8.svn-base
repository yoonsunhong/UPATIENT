@charset "utf-8";

/* ===================== 로그인 영역 ===================== */
body{background:url(../images/bg/login_bg.jpg) no-repeat 50% 0;-webkit-background-size:cover;-moz-background-size:cover;-o-background-size:cover;background-size:cover;}
#wrap{width:73.67149758454106%;height:100%;margin:0px auto;text-align:center;}
#content{width:100%;bottom:0;left:0;right:0;}

.login_area input[type=text], .login_area input[type=password]{width:100%;height:35px;line-height:35px;padding-left:25.79234972677596%;font-size:0.875em;color:#0db5ec}
.login_area input[type=text]:focus, .login_area input[type=password]:focus{border:3px solid #095088}

.login_area > div{position:relative;margin-bottom:3.301476976542137%;}
.login_area .input_id label, .login_area .input_pwd label{position:absolute;top:50%;left:6%;font-size:0.875em;text-indent:-9999px;background-repeat:no-repeat;background-size:contain;}
.login_area .input_id label{width:20px;margin-top:-9px;padding-top:calc(20/57*100%);background-image:url("../images/icon/id.png")}
.login_area .input_pwd label{width:15px;margin:-11px 0 0 0;padding-top:calc(15/63*100%);background-image:url("../images/icon/pwd.png")}

.login_area > div.auto_login{margin-bottom:0;margin-left:6%;text-align:left;font-size:0.75em;color:#fff}
.auto_login input[type="checkbox"]{position:absolute;width:1px;height:1px;padding:0;margin:-1px;overflow:hidden;clip:rect(0,0,0,0);border:0}
.auto_login input[type="checkbox"] + label{display:inline-block;position:relative;-webkit-user-select:none;-moz-user-select: none;-ms-user-select:none;}
.auto_login input[type="checkbox"] + label:before{content:"";display:inline-block;width:13px;height:13px;line-height:13px;margin:-2px 8px 0 0;text-align:center;vertical-align:middle;background:#fff;border:1px solid #1288c7;}
.auto_login input[type="checkbox"]:checked + label:before{content:"\2713";color:#1288c7;}

.login_area input::-moz-input-placeholder{color:#0db5ec;font-size:0.875em}/* input placeholder color */
.login_area input::-webkit-input-placeholder{color:#0db5ec;font-size:0.875em}/* input placeholder color */
.login_area button[type=button]{margin:7% 0 9.298913043478261%;background-color:#095088;font-size:1.2em}

.login_area .login_btm p{padding-bottom:4%;font-size:0.875em;text-align:left}
.login_area .login_btm span:first-child{padding-right:7.540983606557377%;color:#fff;opacity:0.63;filter:Alpha(opacity=63);}
.login_area .login_btm a:hover, .login_area .login_btm a:focus{color:#fdc82e}
